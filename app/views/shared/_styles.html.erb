<style>
  :root {
    --primary-color: <%= EuroskyConfig::PRIMARY_COLOR %>;
    --secondary-color: <%= EuroskyConfig::SECONDARY_COLOR %>;
    --gradient: <%= EuroskyConfig.gradient_css %>;
  }

  body {
    background: var(--gradient);
    min-height: 100vh;
  }

  .btn-gradient {
    background: var(--gradient);
    color: white;
    border: none;
    font-weight: 600;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .btn-gradient:hover {
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
  }

  .btn-gradient:active {
    transform: translateY(0);
  }

  .btn-gradient:focus {
    color: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.3);
  }

  .card-eurosky {
    background: white;
    border: none;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    overflow: hidden;
  }

  .header-eurosky {
    background: var(--gradient);
    color: white;
    text-align: center;
  }

  .header-eurosky h1 {
    font-weight: 600;
  }

  <% if EuroskyConfig::LOGO_URL.present? %>
  .header-logo {
    max-width: 200px;
    max-height: 80px;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  <% end %>

  .progress-bar-eurosky {
    background: var(--gradient);
  }

  .token-badge {
    font-size: 24px;
    font-weight: 700;
    letter-spacing: 2px;
    background: rgba(255, 255, 255, 0.2);
    padding: 8px 16px;
    border-radius: 6px;
    display: inline-block;
  }

  .wizard-progress {
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
  }

  .wizard-progress-step {
    flex: 1;
    text-align: center;
    position: relative;
  }

  .wizard-progress-step::before {
    content: '';
    position: absolute;
    top: 15px;
    left: -50%;
    right: 50%;
    height: 2px;
    background-color: #ddd;
    z-index: 0;
  }

  .wizard-progress-step:first-child::before {
    display: none;
  }

  .wizard-progress-step.active::before,
  .wizard-progress-step.completed::before {
    background-color: #F57F29;
  }

  .wizard-progress-circle {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #e0e0e0;
    color: white;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .wizard-progress-step.active .wizard-progress-circle {
    background: #F57F29;
    transform: scale(1.1);
  }

  .wizard-progress-step.completed .wizard-progress-circle {
    background: #28a745;
  }

  .wizard-progress-label {
    font-size: 13px;
    color: #666;
    font-weight: 500;
  }

  .wizard-progress-step.active .wizard-progress-label {
    color: #F57F29;
    font-weight: 600;
  }

  .wizard-step {
    display: none;
  }

  .wizard-step.active {
    display: block;
  }

  .lookup-status {
    padding: 8px 12px;
    border-radius: 4px;
    font-size: 14px;
    display: none;
  }

  .lookup-info {
    background-color: #e3f2fd;
    color: #1565c0;
    border: 1px solid #90caf9;
  }

  .lookup-success {
    background-color: #e8f5e9;
    color: #2e7d32;
    border: 1px solid #81c784;
  }

  .lookup-error {
    background-color: #ffebee;
    color: #c62828;
    border: 1px solid #ef9a9a;
  }

  .readonly-field {
    background-color: #f5f5f5 !important;
    color: #666 !important;
    cursor: not-allowed;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .spin {
    display: inline-block;
    animation: spin 2s linear infinite;
  }

  @keyframes pulse-border {
    0%, 100% { box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); }
    50% { box-shadow: 0 4px 20px rgba(59, 130, 246, 0.25); }
  }

  .backup-urgent {
    animation: pulse-border 2s ease-in-out infinite;
  }
</style>
