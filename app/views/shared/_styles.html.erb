<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap');

  :root {
    --primary-color: <%= EuroskyConfig::PRIMARY_COLOR %>;
    --secondary-color: <%= EuroskyConfig::SECONDARY_COLOR %>;
    --gradient: <%= EuroskyConfig.gradient_css %>;
    --accent-color: #10b981;
    --text-color: #1a202c;
    --muted-text: #6b7280;
    --card-bg: #ffffff;
    --border-color: #e5e7eb;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: var(--gradient);
    min-height: 100vh;
    color: var(--text-color);
  }

  /* Buttons */
  .btn-gradient {
    background: var(--gradient);
    color: white;
    border: none;
    border-radius: 9999px;
    padding: 0.75rem 2rem;
    font-weight: 600;
    font-size: 1rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .btn-gradient:hover {
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
  }

  .btn-gradient:active {
    transform: translateY(0);
  }

  .btn-gradient:focus {
    color: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.25);
  }

  .btn-secondary {
    border-radius: 9999px;
    padding: 0.75rem 2rem;
    font-weight: 600;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .btn-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
  }

  /* Form Controls */
  .form-control, .form-select {
    padding: 0.625rem 0.875rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    border: 1px solid var(--border-color);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  .form-control:focus, .form-select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
  }

  .form-label {
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text-color);
    margin-bottom: 0.5rem;
  }

  .form-text {
    font-size: 0.85rem;
    color: var(--muted-text);
  }

  /* Cards */
  .card-eurosky {
    background: var(--card-bg);
    border: none;
    border-radius: 1.5rem;
    box-shadow: 0 15px 30px -5px rgba(0, 0, 0, 0.05), 0 5px 15px -5px rgba(0, 0, 0, 0.03);
    overflow: hidden;
  }

  .header-eurosky {
    background: var(--gradient);
    color: white;
    text-align: center;
  }

  .header-eurosky h1 {
    font-weight: 600;
  }

  <% if EuroskyConfig::LOGO_URL.present? %>
  .header-logo {
    max-width: 200px;
    max-height: 80px;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
  <% end %>

  .progress-bar-eurosky {
    background: var(--gradient);
  }

  .token-badge {
    font-size: 24px;
    font-weight: 700;
    letter-spacing: 2px;
    background: rgba(255, 255, 255, 0.2);
    padding: 8px 16px;
    border-radius: 6px;
    display: inline-block;
  }

  /* Step Progress Bar */
  .step-progress-bar {
    width: 100%;
    height: 8px;
    background-color: var(--border-color);
    border-radius: 9999px;
    margin-bottom: 1.5rem;
  }

  .progress-indicator {
    height: 100%;
    background: var(--gradient);
    border-radius: 9999px;
    transition: width 0.5s ease-in-out;
  }

  /* Wizard Progress Steps */
  .wizard-progress {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2rem;
    padding: 0;
  }

  .wizard-progress-step {
    flex: 1;
    text-align: center;
    position: relative;
  }

  .wizard-progress-circle {
    width: 45px;
    height: 45px;
    border-radius: 9999px;
    background: var(--border-color);
    color: var(--muted-text);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1rem;
    transition: background-color 0.3s ease, color 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    z-index: 1;
  }

  .wizard-progress-step.active .wizard-progress-circle {
    background: var(--primary-color);
    color: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.2);
  }

  .wizard-progress-step.completed .wizard-progress-circle {
    background: var(--accent-color);
    color: white;
  }

  .wizard-progress-label {
    margin-top: 0.5rem;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--muted-text);
    transition: color 0.3s ease;
  }

  .wizard-progress-step.active .wizard-progress-label {
    color: var(--text-color);
    font-weight: 600;
  }

  .wizard-progress-step.completed .wizard-progress-label {
    color: var(--text-color);
  }

  /* Wizard Steps */
  .wizard-step {
    display: none;
    animation: fadeIn 0.4s ease-in-out;
  }

  .wizard-step.active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Lookup Status Messages */
  .lookup-status {
    padding: 0.75rem 1rem;
    border-radius: 0.75rem;
    font-size: 0.9rem;
    display: none;
  }

  .lookup-info {
    background-color: #eff6ff;
    color: #1e40af;
    border: 1px solid #bfdbfe;
  }

  .lookup-success {
    background-color: #f0fdf4;
    color: #166534;
    border: 1px solid #86efac;
  }

  .lookup-error {
    background-color: #fef2f2;
    color: #991b1b;
    border: 1px solid #fca5a5;
  }

  .readonly-field {
    background-color: #f9fafb !important;
    color: #6b7280 !important;
    cursor: not-allowed;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .spin {
    display: inline-block;
    animation: spin 2s linear infinite;
  }

  @keyframes pulse-border {
    0%, 100% { box-shadow: 0 15px 30px -5px rgba(0, 0, 0, 0.05); }
    50% { box-shadow: 0 15px 30px -5px rgba(59, 130, 246, 0.2); }
  }

  .backup-urgent {
    animation: pulse-border 2s ease-in-out infinite;
  }

  .section-divider {
    border: none;
    border-top: 1px solid var(--border-color);
    margin: 24px 0;
  }
</style>
